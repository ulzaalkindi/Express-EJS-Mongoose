<ol class="breadcrumb py-3">
  <li class="breadcrumb-item"><a href="/">Home</a></li>
  <li class="breadcrumb-item active" aria-current="page">Contact</li>
</ol>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Tambah Data Contact</h2>
      <!-- errorsnya undefined atau bukan kalo dicek makanya dicek dulu -->
      <% if (typeof errors !='undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/contact/?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>" />
        <!-- untuk fungsi update jangan lupa 
        untuk menambakan file input hidden untuk mengakses data contactnya untuk pencariannya -->
        <input
          type="hidden"
          name="oldNama"
          value="<%= contact.oldNama || contact.nama %>"
        />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            value="<%= contact.nama %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">No HP</label>
          <input
            type="text"
            class="form-control"
            id="nohp"
            name="nohp"
            value="<%= contact.nohp %>"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Ubah data</button>
      </form>
    </div>
  </div>
</div>
